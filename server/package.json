{
  "name": "spensa",
  "version": "1.0.0",
  "description": "multi-currency expense tracker ",
  "main": "index.js",
  "scripts": {
    "gen:env": "gen-env-types .env -o src/types/env.d.ts -e .",
    "dev": "nodemon dist/index.js",
    "dev:ts-node": "nodemon --exec ts-node src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --list-different \"src/**/*.{ts,json}\"",
    "lint": "eslint 'src/**/*.{js,ts}' --fix --quiet",
    "migration:create": "mikro-orm migration:create",
    "prepare": "cd .. && husky install server/.husky",
    "start": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebrutalcorporation/spensa.git"
  },
  "author": "Charlie Astrada",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thebrutalcorporation/spensa/issues"
  },
  "homepage": "https://github.com/thebrutalcorporation/spensa#readme",
  "devDependencies": {
    "@types/connect-redis": "^0.0.16",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.3",
    "@types/faker": "^5.1.5",
    "@types/ioredis": "^4.26.1",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.8",
    "@types/nodemailer": "^6.4.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "apollo-server-integration-testing": "^3.0.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.1.0",
    "gen-env-types": "^1.0.4",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.3.0",
    "@mikro-orm/core": "^4.3.0",
    "@mikro-orm/postgresql": "^4.3.0",
    "apollo-server-express": "^2.19.0",
    "argon2": "^0.27.1",
    "class-validator": "^0.13.1",
    "connect-redis": "^5.0.0",
    "cors": "^2.8.5",
    "deep-email-validator": "^0.1.18",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "graphql": "^15.4.0",
    "ioredis": "^4.27.1",
    "nodemailer": "^6.6.0",
    "type-graphql": "^1.1.1",
    "uuid": "^8.3.2",
    "uuidv4": "^6.2.5"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/orm.config.ts",
      "./dist/orm.config.js"
    ]
  }
}
